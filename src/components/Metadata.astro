---
import { type Props, SEO } from 'astro-seo'
import { ViewTransitions } from 'astro:transitions'

import { SITE_BASE } from '@/const/url'

const { title, description } = Astro.props

const DEFAULT_TITLE_PAGE = 'Velvetta'
const DEFAULT_DESCRIPTION_PAGE = 'Velvetta - Indulge in daring luxury and irresistible pleasure.'

const opengraph = {
  openGraph: {
    basic: {
      image: '',
      title: DEFAULT_TITLE_PAGE,
      type: 'website',
      url: SITE_BASE,
    },
    optional: {
      locale: 'en-US',
      siteName: DEFAULT_TITLE_PAGE,
    },
  },
}
const metadata: Props = {
  charset: 'UTF-8',
  title: title || DEFAULT_TITLE_PAGE,
  description: description || DEFAULT_DESCRIPTION_PAGE,
  noindex: false,
  ...opengraph,
}
---

<head>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />

  <SEO {...metadata} />
  <ViewTransitions />

  <!-- Sitemap -->
  <link rel="sitemap" href="/sitemap-index.xml" />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet" />
</head>